# VolatiQ Environment Configuration
# Copy this file to .env and update the values

# Application Environment
FLASK_ENV=production
DASH_ENV=production
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_URL=http://localhost:5000

# Dashboard Configuration
DASH_HOST=0.0.0.0
DASH_PORT=8050

# Database Configuration (if using PostgreSQL)
POSTGRES_DB=volatiq
POSTGRES_USER=volatiq
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://volatiq:your_secure_password_here@localhost:5432/volatiq

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
YAHOO_FINANCE_API_KEY=optional_yahoo_finance_key

# Model Configuration
MODEL_RETRAIN_INTERVAL=86400  # seconds (24 hours)
MAX_PREDICTION_BATCH_SIZE=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
